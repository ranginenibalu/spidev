#include<stdio.h>

#include<iostream>
#include<math.h>
#include<string.h>
#include<stdlib.h>
using namespace std;

struct sensor_info
{
	short int net_id; //2 bytes
	char addr[8];
	unsigned char sensor_id;
	char sensor_val[6];
	short int timestamp;
	short int lqi;
};

int main()
{
	sensor_info si;
	cout<<"size of short int"<<sizeof(si.net_id)<<endl;
	cout<<"size of char"<<sizeof(si.addr)<<endl;
	cout<<"size of unsigned char"<<sizeof(si.sensor_id)<<endl;
	//cout<<"size of short int"<<sizeof(si.net_id)<<endl;
	//cout<<"size of short int"<<sizeof(si.net_id)<<endl;
	//cout<<"size of short int"<<sizeof(si.net_id)<<endl;
	return 0;
}
